/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOA, GPIO_PIN_4, GPIO_PIN_RESET);

  /*Configure GPIO pin : PA4 */
  GPIO_InitStruct.Pin = GPIO_PIN_4;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /*Configure GPIO pin : PA5 */
  GPIO_InitStruct.Pin = GPIO_PIN_5;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

}

/* USER CODE BEGIN 4 */
volatile uint32_t ultrasonicDistance = 0;
/* USER CODE END 4 */

/* USER CODE BEGIN Header_StartTask1 */
/**
  * @brief  Function implementing the Task1 thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_StartTask1 */
void StartTask1(void *argument)
{
  /* Infinite loop */

  for (;;)
  {
	  // Trigger the ultrasonic sensor
	  	  HAL_GPIO_WritePin(GPIOA, GPIO_PIN_4, GPIO_PIN_SET);
	  	  osDelay(1);  // Wait for 1ms
	  	  HAL_GPIO_WritePin(GPIOA, GPIO_PIN_4, GPIO_PIN_RESET);

	  	  // Wait for the ECHO signal to be high
	  	  while (HAL_GPIO_ReadPin(GPIOA, GPIO_PIN_5) == GPIO_PIN_RESET);

	  	  // Measure the time ECHO signal is high
	  	  uint32_t startTime = osKernelGetTickCount();
	  	  while (HAL_GPIO_ReadPin(GPIOA, GPIO_PIN_5) == GPIO_PIN_SET);
	  	  uint32_t endTime = osKernelGetTickCount();

	  	  // Calculate distance in centimeters (assuming speed of sound is 343 meters/second)
	  	  ultrasonicDistance = (endTime - startTime) * 343 / 200;

	  	  // Send the distance to the BluetoothTask using a message queue
	  	  osMessageQueuePut(distanceQueueHandle, &ultrasonicDistance, 0, 0);

	  	  // Signal completion using the semaphore
	  	  osSemaphoreRelease(ultrasonicSemaphoreHandle);

	  	  osDelay(500); // Adjust as needed
  }
  //osThreadExit();
}
  /* USER CODE END 5 */


/* USER CODE BEGIN Header_StartTask2 */
/**
* @brief Function implementing the Task2 thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTask2 */
void StartTask2(void *argument)
{
  /* USER CODE BEGIN StartTask2 */
  /* Infinite loop */
	uint32_t receivedDistance;
	char uartData[50];
  for(;;)
  {
	  // Wait for the UltrasonicTask to complete and release the semaphore
	  osSemaphoreAcquire(ultrasonicSemaphoreHandle, osWaitForever);

	  // Receive distance data from the queue
	  if (osMessageQueueGet(distanceQueueHandle, &receivedDistance, NULL, osWaitForever) == osOK)
	  {
	    // Transmit the measured distance over Bluetooth
	    snprintf(uartData, sizeof(uartData), "Distance: %lu cm\r\n", receivedDistance);

	    // Transmit the data via UART
	    if (HAL_UART_Transmit(&huart2, (uint8_t *)uartData, strlen(uartData), HAL_MAX_DELAY) != HAL_OK)
	    {
	      // Error handling if UART transmission fails
	      Error_Handler();
	    }
	  }
	  else
	  {
	    // Handle error when receiving data from the queue
		  if (HAL_UART_Transmit(&huart2, (uint8_t *)uartData, strlen(uartData), HAL_MAX_DELAY));
	  }

  }
  //osThreadExit();
}
  /* USER CODE END StartTask2 */

/**
  * @brief  Period elapsed callback in non blocking mode
  * @note   This function is called  when TIM5 interrupt took place, inside
  * HAL_TIM_IRQHandler(). It makes a direct call to HAL_IncTick() to increment
  * a global variable "uwTick" used as application time base.
  * @param  htim : TIM handle
  * @retval None
  */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  /* USER CODE BEGIN Callback 0 */

  /* USER CODE END Callback 0 */
  if (htim->Instance == TIM5) {
    HAL_IncTick();
  }
  /* USER CODE BEGIN Callback 1 */

  /* USER CODE END Callback 1 */
}

